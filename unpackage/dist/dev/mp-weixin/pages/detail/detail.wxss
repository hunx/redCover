.wrapper .cover {
  background-image: url(https://res.wx.qq.com/a/wx_fed/money-envelope-cover/res/img/skin_bg.59803d00.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  padding: 40rpx 0;
  margin: 10rpx 60rpx;
}
.wrapper .cover-img {
  width: 300rpx;
  height: 500rpx;
  margin: auto;
  border-radius: 8px;
  display: block;
}
.wrapper .func {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 600rpx;
  margin: auto;
  margin-bottom: 30rpx;
}
.wrapper .func-btn {
  border: none;
  padding: 0 40rpx;
  height: 90rpx;
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  background-color: #fbd926;
  border-radius: 90rpx;
  margin-top: 30rpx;
  font-size: 34rpx;
  font-weight: 700;
}
.wrapper .func-btn.success {
  background-color: #07c160;
  color: #FFFFFF;
}
.wrapper .func-btn-img {
  width: 34rpx;
  height: 34rpx;
  display: block;
  margin-right: 6rpx;
}
.wrapper .func-or {
  width: 100%;
  text-align: center;
  margin-top: 30rpx;
  font-size: 26rpx;
}
.wrapper .recommand {
  margin-left: 20rpx;
}
.wrapper .modal {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.wrapper .modal-content-body {
  width: 600rpx;
  padding: 60rpx 0;
  background-color: #FFFFFF;
  border-radius: 8px;
}
.wrapper .modal-content-body-title {
  font-size: 34rpx;
  color: #333333;
  font-weight: 700;
  text-align: center;
  margin-bottom: 30rpx;
}
.wrapper .modal-content-body-link {
  font-size: 34rpx;
  color: #333333;
  font-weight: 700;
  text-align: center;
  width: 100%;
}
.wrapper .modal-content-body-getdesc {
  text-align: center;
  margin: auto;
  display: block;
}
.wrapper .modal-content-body-question {
  margin: auto;
  display: block;
  border: none;
  font-size: 28rpx;
  color: #576b95;
  margin-top: 30rpx;
}
.wrapper .modal-content-cancel {
  width: 50rpx;
  height: 50rpx;
  margin: auto;
  display: block;
  margin-top: 60rpx;
}

