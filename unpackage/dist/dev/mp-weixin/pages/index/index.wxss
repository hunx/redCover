.wrapper .recommand {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 30rpx 30rpx 46rpx;
  position: relative;
}
.wrapper .recommand::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 16rpx;
  bottom: 0;
  left: 0;
  background: #f8f8f8;
}
.wrapper .recommand-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  overflow-y: scroll;
}
.wrapper .recommand-content::-webkit-scrollbar {
  display: none;
  width: 0 !important;
  height: 0 !important;
  -webkit-appearance: none;
  background: transparent;
}
.wrapper .recommand-content-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 200rpx;
  padding: 20rpx 0;
  margin-right: 20rpx;
  border-radius: 8px;
  position: relative;
}
.wrapper .recommand-content-item.ele {
  background-color: #e2f2ff;
}
.wrapper .recommand-content-item.meituan {
  background-color: #fff2d2;
}
.wrapper .recommand-content-item-border {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
}
.wrapper .recommand-content-item-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}
.wrapper .recommand-content-item-name {
  width: 100%;
  margin-top: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.wrapper .recommand-content-item-desc {
  margin: 10rpx 0;
  color: #e52b2b;
  font-weight: 700;
}
.wrapper .recommand-content-item-tip {
  font-size: 26rpx;
  color: #8e8e8e;
}
.wrapper .list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 25rpx 15rpx;
}
.wrapper .list-item {
  width: 240rpx;
  box-sizing: border-box;
  box-shadow: 0px 15px 10px -15px #000;
  margin-bottom: 20rpx;
}
.wrapper .list-item-img {
  display: block;
  margin: auto;
  width: 220rpx;
  height: 360rpx;
  border-radius: 8px 8px 0 0;
}

